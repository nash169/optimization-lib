#!/usr/bin/env python
# encoding: utf-8

import os

required = {"ipopt_test.cpp": ["IPOPT"],
            "nlopt_test.cpp": ["NLOPT"],
            "nlopt_test.cpp": ["QPOASES"], }
optional = {}


def options(opt):
    pass


def configure(cfg):
    pass


def build(bld):
    sources = []
    for _, _, filenames in os.walk(bld.path.abspath()):
        sources += [
            filename for filename in filenames if filename.endswith(('.cpp', '.cc'))]

    # Compile all the examples
    for src in sources:
        if src in required:
            if not set(required[src]).issubset(bld.env["libs"]):
                break

        bld.program(
            features="cxx",
            install_path=None,
            source=src,
            includes="..",
            uselib=bld.env["libs"],
            use=bld.env["libname"],
            target=src[: len(src) - len(".cpp")],
        )
